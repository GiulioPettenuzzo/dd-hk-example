{
  "name": "DD Heroku Template",
  "description": "A small project template for heroku+salesforce projects",
  "keywords": [
    "heroku",
    "salesforce",
    "template"
  ],
  "addons": [
    "papertrail:choklad",
    "herokuconnect:demo",
    "heroku-postgresql:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
        "required": true
    },
    "VUE_APP_HOSTNAME": {
      "value": "$HEROKU_APP_NAME"
    }
  }
}
